{
    "data_path": "covid_symptoms_severity_prediction.csv",
    "output_dir": "results",
    "preprocessor_path": "results/preprocessor.pkl",
    "best_model_path": "results/best_model.pkl",
    "target_column": "severity_flag",
    "random_state": 42,
    "test_size": 0.2,
    "models": {
        "LogisticRegression": {
            "name": "Logistic Regression",
            "params": {
                "C": [0.1, 1.0, 10.0],
                "penalty": ["l1", "l2"]
            },
            "best_params": {"C": 1.0, "penalty": "l2", "solver": "liblinear", "random_state": 42, "class_weight": "balanced"}
        },
        "RandomForestClassifier": {
            "name": "Random Forest",
            "params": {
                "n_estimators": [100, 200],
                "max_depth": [5, 10]
            },
            "best_params": {"n_estimators": 100, "max_depth": 10, "random_state": 42, "class_weight": "balanced"}
        },
        "SVC": {
            "name": "SVM (RBF)",
            "params": {
                "C": [0.1, 1.0],
                "gamma": ["scale", "auto"]
            },
            "best_params": {"C": 1.0, "gamma": "scale", "kernel": "rbf", "random_state": 42, "probability": true, "class_weight": "balanced"}
        }
    }
}